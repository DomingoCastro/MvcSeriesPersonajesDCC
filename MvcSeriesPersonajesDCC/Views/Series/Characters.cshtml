@model IEnumerable<MvcSeriesPersonajesDCC.Models.Personajes>

@*Le agregamos una vista un poco diferente a la tabla para cambiar un poco
y agregamos funcionalidad a la imagen para que no salga como url.
Ademas, le agregamos un botón para volver al listado*@

<h1>Characters</h1>


<table class="table table-dark">
    <thead>
        <tr>
            <th>
                <h3>ID</h3>
            </th>
            <th>
                <h3>Nombre</h3>
            </th>
            <th>
                <h3>Imagen</h3>
            </th>
            <th>
                <h3>Id Serie</h3>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <img src="@item.Imagen" width="200px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Series" asp-action="Index"
   class="btn btn-outline-danger"> Volver Atrás</a>
